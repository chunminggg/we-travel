<view class="page">
    <view class="page__hd" style="padding:0">
     <image  mode="aspectFill" src="{{icon60}}" class="cellImage"  data-img="{{icon60}}">
 </image>
    </view>
   
    <view class="page__bd borderStyle" style="padding-bottom:0px" wx:for="{{itemArray}}" wx:key="*this" >
        
    
        <navigator url="" class="weui-media-box weui-media-box_appmsg " hover-class="weui-cell_active">
                    <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                        <image class="weui-media-box__thumb" src="{{item.coverImage}}" />
                    </view>
                    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <view class="weui-media-box__title">{{item.name}}</view>
                        <view class="weui-media-box__desc">{{item.describe}}</view>
                    </view>
                </navigator>
                 <view class="weui-media-box__info" style="margin-left:15px">
                        <view class="weui-media-box__info__meta">{{item.place}}出发</view>
                        <view class="weui-media-box__info__meta">{{item.startDate}}至{{item.endDate}}</view>
                        <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">￥{{item.price}}</view>
                    </view>
    </view>
</view>