<view class="page">

  <view class='saleView'>
    <view class='saleHead'>
      <view class='line'></view>
      <view class='chineseTitle'>海岛特价</view>
      <view class='englishTitle'>SALE</view>
    </view>
    <view class='saleBody'></view>
    <swiper class='specialView' indicator-dots="true" autoplay="YES" interval="2000">
      <block wx:for="{{specialPriceArray}}" wx:key="*this">
        <swiper-item style="">
          <image src="{{item.imageArray[0].url}}" mode="scaleToFill" class='scrollImage'></image>
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view class='stripView'></view>

  <view class='btn-group'>
    <view class='itemCell'>
      <view class='btn-round'>
        <image src='../../img/全部海岛-1.png' class='btn-image'></image>
      </view>
      <view class='btn-text'>全部海岛</view>
    </view>
    <view class='itemCell'>
      <view class='btn-round'>
        <image src='../../img/海岛特价-1.png' class='btn-image'></image>
      </view>
      <view class='btn-text'>海岛特价</view>
    </view>
    <view class='itemCell'>
      <view class='btn-round'>
        <image src='../../img/精品推荐-1.png' class='btn-image'></image>
      </view>
      <view class='btn-text'>精品推荐</view>
    </view>
    <view class='itemCell'>
      <view class='btn-round'>
        <image src='../../img/跟团游-1.png' class='btn-image'></image>
      </view>
      <view class='btn-text'>跟团游</view>
    </view>
    <view class='itemCell'>
      <view class='btn-round'>
        <image src='../../img/自由行-1.png' class='btn-image'></image>
      </view>
      <view class='btn-text'>自由行</view>
    </view>
  </view>

  <view class='stripView'></view>

  <view class='islandsView'></view>
  <view class='saleHead'>
    <view class='line'></view>
    <view class='chineseTitle'>全部海岛</view>
    <view class='englishTitle'>ISLANDS</view>
    <view class='allView'>
      <view class='allText'>
        全部
      </view>
      <!-- <view class='arrowView'></view> -->
       <image src='../../img/全部-1.png' class='arrowView' ></image> 
    </view>
  </view>
</view>