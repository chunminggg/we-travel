<!--轮播图-->
<swiper indicator-dots="true" autoplay="YES" interval="2000">
<block wx:for="{{imageArray}}" wx:key="*this">
<swiper-item style="">
<image src="{{item.imageUrl}}" mode="aspectFill" style="width:100%;height:350rpx" ></image>
</swiper-item>
</block>
</swiper>
<section>
   <!--景点推荐-->
<scroll-view scroll-y="true" style="height:100%" >  
<view  wx:for="{{dataArray}}" wx:for-index="idx" wx:for-item="item" wx:key="*this" class="itemClass"> 
<!--景点图片-->
<view >
 <image  mode="aspectFill" src="{{item.imageUrl}}" class="cellImage"  data-img="{{item.imageUrl}}" bindtap="clickImageidx">
 </image>
</view>
<!--景点名称-->
<view class="textView">
<text class="labelClass">巴厘岛的美丽传说</text>
</view>
<!--详情文字-->
<view class="detailTextView">
<text class="detailLabelClass">印度尼西亚,巴厘岛|十天八晚</text>
</view>
<!--分割线-->
<view class="splitLine">
</view>
</view>
</scroll-view> 
</section>
