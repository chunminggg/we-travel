/**index.wxss**/
.upload_Item_text{
 white-space: pre-line;
 margin-top:-30rpx;
width: 100%;
}
.uploadWrap {
  height: 400rpx;
  width: 100%;
  display: flex;
  display: -webkit-box;
  flex-direction: column;
   white-space: nowrap;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.upload_Item {
  width: 50%;
  height: 360rpx;
  flex: 1;
  margin-right: 20rpx
}

.upload_Item_img {
  width: 100%;
  height: 200rpx;
}

.introText {
  display: flex;
}

.imageText {
  margin-top: 10rpx;
}

.bigTitle {
  font-size: 20px;
}

.smallTitle {
  margin-left: 10px;
  margin-top: 6px;
  color: #eee;
}
.moreTitle{
  color:aqua;
  margin-left: 10px;
  margin-top: 6px;
}
.itemClass {
  width: 100%;
  margin-top: 20px;
  /* display: flex; */
  height: 100%;
  /* align-items: center; *//* justify-content: center; */
}

.labelClass {
  font-size: 14px;
  color: gray;
}

.detailLabelClass {
  font-size: 12px;
  color: lightgray;
}

.detailTextView {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10px;
}

.textView {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cellImage {
  width: 90%;
  height: 300rpx;
  margin-left: 5%;
}

.splitLine {
  margin-top: 10px;
  border: 1px solid lightgray;
}

/*选项卡*/

.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #777;
  text-align: center;
  line-height: 80rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 33%;
  color: #777;
}

.on {
  color: #da7c0c;
  border-bottom: 5rpx solid #da7c0c;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}
