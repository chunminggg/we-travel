.buttonView{
  width: 25%;
  float: left;
}
.btn-group{
  display: flex;
 justify-content: center;
}
.buttonText{
  margin-left: 1.8rem
}
.btn{
  margin-left: 1rem;
  width: 56px;
  height: 56px;
  display: inline-block;
  color: #fff;
  position: relative;
  z-index: 1;
  overflow: hidden;
  padding: 0;
  vertical-align: middle;
  text-align: center;
  font-size: 1rem;
  border: none;
   box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12), 0 3px 1px -2px rgba(0,0,0,0.2); 
  background-color: red;
  border-radius: 28px;
}
/**index.wxss**/
.upload_Item_text{
 white-space: pre-line;
 margin-top:-30rpx;
width: 100%;
}
.uploadWrap {
  height: 400rpx;
  width: 100%;
  display: flex;
  display: -webkit-box;
  flex-direction: column;
   white-space: nowrap;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.upload_Item {
  width: 50%;
  height: 360rpx;
  flex: 1;
  margin-right: 20rpx
}

.upload_Item_img {
  width: 100%;
  height: 200rpx;
}

.introText {
  display: flex;
}

.imageText {
  margin-top: 10rpx;
}

.bigTitle {
  font-size: 20px;
}

.smallTitle {
  margin-left: 10px;
  margin-top: 6px;
  color: #eee;
}
.moreTitle{
  color:aqua;
  margin-left: 10px;
  margin-top: 6px;
}
.itemClass {
